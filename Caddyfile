# Caddy configuration for SmarterBOT.store
# This is an alternative to nginx.conf

{
    # Global options
    admin off
    auto_https off
}

:80 {
    # Serve static files from /app/dist
    root * /app/dist
    
    # Enable file serving
    file_server
    
    # Enable gzip compression
    encode gzip zstd
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
    }
    
    # Cache static assets
    @static {
        path *.jpg *.jpeg *.png *.gif *.ico *.css *.js *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # SPA routing - serve index.html for all routes
    try_files {path} /index.html
    
    # Health check endpoint
    handle /health {
        respond "healthy" 200
    }
    
    # Logging (optional, can be removed in production)
    log {
        output stdout
        format console
        level INFO
    }
}
